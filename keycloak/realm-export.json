{
  "realm": "promocode",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "clients": [
    {
      "clientId": "promocode-frontend",
      "enabled": true,
      "publicClient": true,
      "redirectUris": [
        "http://localhost:4200/*",
        "http://localhost/*"
      ],
      "webOrigins": [
        "http://localhost:4200",
        "http://localhost",
        "*"
      ],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "protocol": "openid-connect",
      "attributes": {
        "access.token.lifespan": "1800",
        "post.logout.redirect.uris": "http://localhost:4200/*"
      },
      "protocolMappers": [
        {
          "name": "tenant-id-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "user.attribute": "tenant_id",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "tenant_id",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "promocode-backend",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "protocol": "openid-connect"
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator role with full access"
      },
      {
        "name": "BUSINESS",
        "description": "Business user role with read-only access"
      }
    ]
  },
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "email": "admin@example.com",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["ADMIN"],
      "attributes": {
        "tenant_id": "tenant1"
      }
    },
    {
      "username": "business",
      "enabled": true,
      "emailVerified": true,
      "email": "business@example.com",
      "firstName": "Business",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "business123",
          "temporary": false
        }
      ],
      "realmRoles": ["BUSINESS"],
      "attributes": {
        "tenant_id": "tenant1"
      }
    },
    {
      "username": "admin2",
      "enabled": true,
      "email": "admin2@example.com",
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "Two",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["ADMIN"],
      "attributes": {
        "tenant_id": "tenant2"
      }
    }
  ]
}
